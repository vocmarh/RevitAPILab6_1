<Window x:Class="RevitAPILab6_1.Properties.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RevitAPILab6_1.Properties"
             mc:Ignorable="d" 
             Height="150" Width="300"
             Title = "Данные о модели">
    <StackPanel Background="LightGray">
        <Label Content="Выбрать тип воздуховода из списка" 
               Margin="5"/>
        <ComboBox ItemsSource="{Binding DuctTypes}"
                  SelectedItem="{Binding SelectedDuctType}"
                  DisplayMemberPath="Name"
                  Margin="5"/>
        <Label Content="Выбрать уровень воздуховода из списка" 
               Margin="5"/>
        <ComboBox ItemsSource="{Binding Levels}"
                  SelectedItem="{Binding SelectedLevel}"
                  DisplayMemberPath="Name"
                  Margin="5"/>
        <Label Content="Выбрать смещение воздуховода от уровня" 
               Margin="5"/>
        <TextBox Text="{Binding DuctOffset}" Margin="5"/>

        <Button Content="Применить" Command="{Binding SaveCommand}" 
                Margin="5" Background="Beige" FontWeight="Bold"/>
    </StackPanel>
</Window>
